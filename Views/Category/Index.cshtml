@model IEnumerable<Category>
@{
	ViewData["Title"] = "Categories";
}

@if (Model.Count() > 0) {
    <div class=" d-flex ">
        <div class="flex-grow-1 text-end">
        <a class=" btn btn-dark  " asp-controller="Category" asp-action="Create">Add Category</a>
        </div>
    </div>
<h1> Categories</h1>
<div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col" cite="text-center">Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
      @foreach (var category in Model)
			{
				<tr>
					<td> @category.Id</td>
					<td class=" text-center"> @category.Name</td>
					<td class="text-end">
                        <a asp-action="Update" asp-route-id="@category.Id" class=" btn btn-success m-1">Edit</a>
						<a asp-action="Delete" class=" btn btn-danger m-1">Delete</a>
                    </td>
				</tr>
			}
           
        </tbody>
    </table>
</div>
}
else {
<h1 class=" text-center"> Categories not found</h1>
}